{
  "name": "transform-pkg",
  "version": "1.0.0",
  "description": "Create CLIs that modify a package.json",
  "main": "index.js",
  "author": "Caleb Eby (@calebeby)",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "commitlint -e",
    "fix": "prettier-eslint --write *.js",
    "lint": "npm run -s format && npm run -s eslint",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "eslint": "eslint_d --format=node_modules/eslint-formatter-pretty .",
    "format": "prettier_d --write '**/*.js' '**/*.json'"
  },
  "devDependencies": {
    "@commitlint/cli": "^3.2.0",
    "@commitlint/config-angular": "^3.1.1",
    "babel-jest": "^21.0.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.7.0",
    "eslint-config-prettier": "^2.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint_d": "^5.1.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0",
    "prettier-eslint-cli": "^4.3.0",
    "prettier_d": "^5.7.3",
    "semantic-release": "^8.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "execa": "^0.8.0",
    "has-yarn": "^1.0.0",
    "is-online": "^7.0.0",
    "read-pkg-up": "^2.0.0",
    "tempy": "^0.2.0",
    "write-pkg": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calebeby/transform-pkg.git"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "env": {
      "jest": true
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run format",
      "git add"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "public"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
