{
  "name": "transform-pkg",
  "version": "1.0.0",
  "description": "Create CLIs that modify a package.json",
  "main": "index.js",
  "author": "Caleb Eby (@calebeby)",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "fix": "prettier-eslint --write *.js",
    "lint": "eslint --fix --format=node_modules/eslint-formatter-pretty *.js",
    "precommit": "npm run fix && npm run lint",
    "pretest": "npm run lint"
  },
  "devDependencies": {
    "babel-jest": "^21.0.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "prettier-eslint-cli": "^4.3.0",
    "semantic-release": "^7.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "execa": "^0.8.0",
    "has-yarn": "^1.0.0",
    "is-online": "^7.0.0",
    "read-pkg-up": "^2.0.0",
    "tempy": "^0.2.0",
    "write-pkg": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calebeby/transform-pkg.git"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "jest": true
    }
  }
}
